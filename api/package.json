{
  "name": "photo-archive-api",
  "version": "1.0.0",
  "description": "Cloudflare Workers API for Photo Archive System",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "types": "wrangler types",
    "db:migrate": "wrangler d1 migrations apply photo-archive-db",
    "db:migrate:staging": "wrangler d1 migrations apply photo-archive-db --env staging",
    "db:migrate:production": "wrangler d1 migrations apply photo-archive-db --env production"
  },
  "dependencies": {
    "hono": "^3.12.0",
    "@hono/zod-validator": "^0.2.1",
    "zod": "^3.22.0",
    "jose": "^5.2.0",
    "uuid": "^9.0.0",
    "exifr": "^7.1.3"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.0",
    "@cloudflare/workers-types": "^4.20240117.0",
    "wrangler": "^3.22.0",
    "typescript": "^5.3.0"
  }
}
